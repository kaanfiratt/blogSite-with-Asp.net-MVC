
@{
    ViewBag.Title = "Ekle";
}
 

<form action="/Makale/Ekle"  method="post" enctype="multipart/form-data">
	<table>
		<tr>
			<td>Başlık:</td>
			<td>
				<input type="text" name="Baslik" value="" />
			</td>
		</tr>
		<tr>
			<td>İçerik:</td>
			<td>
				<input type="text"  name="Icerik" value="" />
			</td>
		</tr>
		<tr>
			<td>Kategori:</td>
			<td>
				<select name="KategoriID">

					@foreach (Myblogg.Kategori kategori in ViewBag.Kategoriler)
					{
						<option value="@kategori.ID">@kategori.KategoriAdi</option>
					}
					

				</select>
			</td>
		</tr>
		<tr>
			<td>Resim</td>
			<td>
				<input type="file" name="Resim" value="" />
			</td>
		</tr>
		<tr>
			<td></td>
			<td>
				<input type="submit" name="name" value="Makale ekle" />
			</td>
		</tr>

	</table>

</form>
